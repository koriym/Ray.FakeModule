{
    "name": "ray/fake-module",
    "description":"this is Ray.Di module for developing mocking feature.",
    "keywords":[
      "Ray.Di Module",
      "Mock",
      "Stub"
    ],
    "license": "MIT",
    "autoload":{
        "psr-4":{
            "Ray\\FakeModule\\": "src/"
        },
        "files": ["load_annotations.php"],
        "exclude-from-classmap": ["/tests/"]
    },
    "autoload-dev":{
        "psr-4":{
            "Ray\\FakeModule\\": ["tests/", "tests/Fake"]
        }
    },
    "require": {
        "ray/di": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7"
    },
    "scripts" :{
        "test": ["@cs", "phpunit"],
        "coverage": ["php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage"],
        "cs": ["php-cs-fixer fix -v --dry-run", "phpcs --standard=./phpcs.xml src"],
        "cs-fix": ["php-cs-fixer fix -v", "phpcbf src"]
    }
}
